    <script> // This is the main script.
      const buttonr = document.getElementById('randomButton');
      buttonr.addEventListener('click', () => {
        const maxX = window.innerWidth - buttonr.offsetWidth;
        const maxY = window.innerHeight - buttonr.offsetHeight;
        const randomX = Math.floor(Math.random() * maxX);
        const randomY = Math.floor(Math.random() * maxY);
        buttonr.style.left = `${randomX}px`;
        buttonr.style.top = `${randomY}px`;
      });
    </script>
    <script>
      var button = document.getElementById("yes");
      var textDisplay = document.getElementById("yesText");
      var gifImage = document.getElementById("gifImage");
      var button1 = document.getElementById("randomButton");
      var paragraph = document.querySelector("p");
      button.addEventListener("click", function() {
        if (!button.disabled) {
          localStorage.setItem("yesClicked", true);
          paragraph.style.display = "none";
          if (textDisplay.classList.contains("hidden")) {
            textDisplay.classList.remove("hidden");
            gifImage.classList.remove("hidden");
          } else {
            textDisplay.classList.add("hidden");
            gifImage.classList.add("hidden");
          }
          button1.style.display = "none";
          button.disabled = true;
          type();
        }
      });
      document.getElementById("yes").addEventListener("click", function() {
        document.getElementById("title").style.display = "none";
      });
      const text = [hi sam, i  just want to say that i like you since una kitang nakita idk HAAHAHAHHAHA ano love at first sight ayon lang waley alam mona rin naman ata. halata naman kasi];
      let index = 0;
      let sentence = "";
      let letterIndex = 0;
      let reverse = false;

      function type() {
        if (index === text.length) {
          document.getElementById('finalb').style.display = 'block';
          return;
        }
        if (!reverse && letterIndex < text[index].length) {
          sentence += text[index].charAt(letterIndex);
          document.getElementById('yesText').innerText = sentence;
          letterIndex++;
          setTimeout(type, 50);
        } else {
          index++;
          letterIndex = 0;
          if (index < text.length) {
            setTimeout(type, 1000);
          } else {
            document.getElementById('finalb').style.display = 'block';
          }
          sentence = "";
        }
      }
      document.getElementById('finalb').addEventListener('click', function() {
        window.location.href = './last/';
      });
    </script>
